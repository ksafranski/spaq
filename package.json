{
  "name": "spaq",
  "version": "1.0.0",
  "description": "Template for quickly starting an SPA",
  "main": "index.js",
  "repository": "git@github.com:Fluidbyte/spaq.git",
  "author": "fluidbyte <kent@fluidbyte.net>",
  "license": "MIT",
  "scripts": {
    "lint": "yarn run lint:server && yarn run lint:client",
    "lint:server": "eslint --fix server/",
    "lint:client": "eslint --fix client/",
    "test": "yarn run lint && yarn run cover",
    "test:server": "mocha test/server/**/*.spec.js",
    "test:client": "mocha test/client/**/*.spec.js",
    "test:watch": "nodemon --exec \"mocha || exit 1\"",
    "cover": "istanbul cover _mocha",
    "start": "node ./server",
    "bundle": "webpack",
    "dev": "nodemon ./server --watch ./server"
  },
  "dependencies": {
    "argon2": "^0.15.0",
    "axios": "^0.15.3",
    "babel-preset-stage-0": "^6.22.0",
    "bluebird": "^3.4.7",
    "body-parser": "^1.16.0",
    "bristol": "^0.3.3",
    "ejs": "^2.5.6",
    "express": "^4.14.1",
    "http-errors": "^1.5.1",
    "jwt-simple": "^0.5.1",
    "lodash": "^4.17.4",
    "mongodb": "^2.2.24",
    "obey": "^1.7.3",
    "promised-mongo": "^1.2.0",
    "react": "^15.4.2",
    "react-dom": "^15.4.2",
    "react-enroute": "^1.0.0",
    "redash": "^0.18.0",
    "request-ip": "^1.2.3",
    "require-dir": "^0.3.1",
    "uuid": "^3.0.1"
  },
  "devDependencies": {
    "babel-core": "6.4.5",
    "babel-eslint": "^7.1.1",
    "babel-loader": "6.2.1",
    "babel-preset-es2015": "6.3.13",
    "babel-preset-react": "6.3.13",
    "chai": "^3.5.0",
    "chai-as-promised": "^6.0.0",
    "dirty-chai": "^1.2.2",
    "eslint": "^3.16.1",
    "eslint-config-standard": "^6.2.1",
    "eslint-config-standard-react": "^4.2.0",
    "eslint-plugin-promise": "^3.4.2",
    "eslint-plugin-react": "^6.10.0",
    "eslint-plugin-standard": "^2.0.1",
    "istanbul": "1.1.0-alpha.1",
    "mocha": "^3.2.0",
    "nock": "^9.0.9",
    "nodemon": "^1.11.0",
    "proxyquire": "^1.7.11",
    "react-bootstrap": "^0.30.7",
    "react-hot-loader": "^1.3.1",
    "sinon": "^1.17.7",
    "sinon-chai": "^2.8.0",
    "webpack": "1.12.12",
    "webpack-dev-server": "^2.4.1",
    "webpack-hot-middleware": "^2.17.1"
  },
  "babel": {
    "presets": [
      "es2015",
      "stage-0",
      "react"
    ]
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "env": {
      "browser": true,
      "node": true
    },
    "extends": [
      "standard",
      "standard-react"
    ],
    "globals": [
      "describe",
      "before",
      "beforeEach",
      "after",
      "afterEach",
      "it",
      "expect",
      "should",
      "sinon",
      "proxyquire"
    ]
  }
}
